<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaf4fb"
    android:paddingRight="10sp"
    tools:context="com.example.poisearch.MainActivity"
    >
    <ImageView 
        android:id="@+id/buswayimage"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_centerVertical="true"
        android:src="@drawable/busimage"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/buswayimage"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:orientation="vertical"
     >

    <TextView 
        android:id="@+id/start_station"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:textSize="20sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView 
        android:id="@+id/via_bus_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:textSize="18sp"/>
    <Button 
        android:id="@+id/via_busstation_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/via_bus_title"
        android:layout_alignBottom="@+id/via_bus_title"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:textColor="#808080"
        android:textSize="15sp"
        />
    <TextView 
        android:id="@+id/via_busstation_info"
        android:layout_width="fill_parent"
        android:paddingTop="10sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/via_bus_title"
        android:paddingLeft="20sp"
        android:textSize="16sp"
        />
    </RelativeLayout>
        
    <TextView 
        android:id="@+id/end_station"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:textSize="20sp"
        />

</LinearLayout>
</RelativeLayout>